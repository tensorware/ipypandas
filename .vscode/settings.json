{
    "files.exclude": {
        "**/.yarn": true,
        "**/dist": true,
        "**/lib": true,
        "**/node_modules": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "notebook.formatOnSave.enabled": true,
    "files.trimTrailingWhitespace": true,
    "python.testing.pytestEnabled": true,
    "python.terminal.activateEnvironment": true
}