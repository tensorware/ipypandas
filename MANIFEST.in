include LICENSE
include README.md

include pyproject.toml
include pytest.ini
include .coveragerc

include tsconfig.json
include package.json
include webpack.config.js
include ipypandas/labextension/*.tgz

# Documentation
graft docs
exclude docs/\#*
prune docs/build

# Examples
graft examples

# Tests
graft tests
prune tests/build

# Javascript files
graft src
prune **/node_modules
prune coverage
prune lib

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .github
global-exclude .vscode
global-exclude .ipynb_checkpoints
