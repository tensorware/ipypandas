{
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": [
            "es2020",
            "dom"
        ],
        "types": [
            "jest"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}